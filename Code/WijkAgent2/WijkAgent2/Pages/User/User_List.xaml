<Page x:Class="WijkAgent2.Pages.User.User_List"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WijkAgent2.Pages.User"
      mc:Ignorable="d" 
      Title="User_List">

    <Grid MinHeight="200" MinWidth="200">
        <Button Margin="0,10,10,0" x:Name="BtnAddUser" Content="Add user" Width="100" HorizontalAlignment="Right" VerticalAlignment="Top" Click="BtnAddUser_Click" />

        <DataGrid x:Name="UserList" Margin="10,58,10,10" SelectionChanged="DataGrid_SelectionChanged">
            <DataGrid.Columns>

                <DataGridTextColumn x:Name="UserId"  Header="#" Binding="{Binding UserId}" Width="auto"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="auto"/>
                <DataGridTextColumn Header="Badge NR" Binding="{Binding BadgeId}" Width="auto"/>
                <DataGridTextColumn Header="Tel" Binding="{Binding PhoneNumber}" Width="auto"/>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
